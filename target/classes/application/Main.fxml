<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="492.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="uploadCSV" mnemonicParsing="false" text="Upload CSV" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="downloadCSV" mnemonicParsing="false" text="Download CSV" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="preferences" mnemonicParsing="false" text="Preferences" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="quit" mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About Budget Tracker" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox prefHeight="191.0" prefWidth="900.0">
         <children>
            <BarChart fx:id="barChart" barGap="1.0" legendSide="RIGHT" prefHeight="191.0" prefWidth="900.0" title="Last 12 months">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
      </HBox>
      <HBox prefHeight="234.0" prefWidth="900.0">
         <children>
            <Pane prefHeight="233.0" prefWidth="37.0" />
            <FlowPane orientation="VERTICAL" prefHeight="234.0" prefWidth="228.0">
               <children>
                  <Label contentDisplay="CENTER" text="Add Transaction">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Date" />
                  <DatePicker fx:id="trDate" prefHeight="25.0" prefWidth="207.0" />
                  <Label text="Description" />
                  <TextField fx:id="trDescription" prefWidth="175.0" />
                  <Label text="Funds" />
                  <TextField fx:id="trFunds" />
                  <Label text="Category" />
                  <ComboBox fx:id="trCategory" prefHeight="25.0" prefWidth="208.0" />
                  <FlowPane alignment="CENTER" prefHeight="34.0" prefWidth="200.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Income" />
                        <RadioButton mnemonicParsing="false" text="Expense" />
                      <Button mnemonicParsing="false" text="Save" />
                     </children>
                  </FlowPane>
               </children>
            </FlowPane>
            <FlowPane orientation="VERTICAL" prefHeight="234.0" prefWidth="350.0">
               <children>
                  <FlowPane prefHeight="28.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" prefHeight="28.0" prefWidth="43.0" text="search:" />
                        <TextField prefHeight="28.0" prefWidth="154.0" />
                     </children>
                  </FlowPane>
                  <ListView fx:id="trList" editable="true" prefHeight="206.0" prefWidth="349.0" />
               </children>
            </FlowPane>
            <PieChart prefHeight="234.0" prefWidth="289.0" title="This Month" />
         </children>
      </HBox>
    <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="900.0" spacing="5.0" VBox.vgrow="NEVER">
      <children>
            <Button fx:id="preferences" mnemonicParsing="false" text="Preferences" />
        <Pane prefHeight="35.0" prefWidth="715.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="uploadCSV" mnemonicParsing="false" prefHeight="24.0" prefWidth="88.0" text="upload CSV" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
