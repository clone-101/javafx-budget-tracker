<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="567.0" prefWidth="955.0" stylesheets="@application.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  <children>
      <HBox prefHeight="283.0" prefWidth="1026.0">
         <children>
            <BarChart fx:id="barChart" animated="false" barGap="1.0" legendSide="RIGHT" prefHeight="275.0" prefWidth="900.0" title="Last 12 months" verticalGridLinesVisible="false">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </children>
      </HBox>
      <HBox prefHeight="245.0" prefWidth="955.0">
         <children>
            <Pane prefHeight="233.0" prefWidth="37.0" />
            <FlowPane alignment="CENTER" orientation="VERTICAL" prefHeight="235.0" prefWidth="255.0">
               <children>
                  <Label contentDisplay="CENTER" text="Add Transaction">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Date" />
                  <DatePicker fx:id="trDate" prefHeight="25.0" prefWidth="207.0" />
                  <Label text="Description" />
                  <TextField fx:id="trDescription" prefWidth="175.0" />
                  <Label text="Funds" />
                  <TextField fx:id="trFunds" />
                  <Label text="Category" />
                  <ComboBox fx:id="trCategory" prefHeight="25.0" prefWidth="208.0" />
                  <FlowPane alignment="CENTER" prefHeight="34.0" prefWidth="208.0">
                     <children>
                        <RadioButton fx:id="trIncome" mnemonicParsing="false" text="Income">
                           <toggleGroup>
                              <ToggleGroup fx:id="toggleGroup" />
                           </toggleGroup></RadioButton>
                        <RadioButton fx:id="trExpense" mnemonicParsing="false" text="Expense" toggleGroup="$toggleGroup" />
                        <FlowPane alignment="CENTER" prefHeight="11.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="trClear" mnemonicParsing="false" onAction="#handleClearButton" text="Clear">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Button>
                              <Pane prefHeight="15.0" prefWidth="31.0" />
                            <Button fx:id="trSave" mnemonicParsing="false" onAction="#handleSaveButton" prefHeight="22.0" prefWidth="73.0" text="Save" textFill="#fcfcfc">
                                 <font>
                                    <Font size="10.0" />
                                 </font>
                              </Button>
                           </children>
                        </FlowPane>
                     </children>
                  </FlowPane>
               </children>
            </FlowPane>
            <FlowPane orientation="VERTICAL" prefHeight="234.0" prefWidth="319.0">
               <children>
                  <ListView fx:id="trList" editable="true" prefHeight="248.0" prefWidth="323.0" />
               </children>
            </FlowPane>
            <PieChart prefHeight="235.0" prefWidth="336.0" title="This Month" />
         </children>
      </HBox>
    <HBox id="HBox" alignment="BOTTOM_CENTER" prefHeight="41.0" prefWidth="900.0" spacing="5.0" VBox.vgrow="NEVER">
      <children>
            <Button fx:id="preferences" mnemonicParsing="false" onMouseClicked="#switchToPreferences" prefHeight="22.0" prefWidth="121.0" text="Preferences" />
            <Button fx:id="about" mnemonicParsing="false" prefHeight="22.0" text="About" />
        <Pane prefHeight="35.0" prefWidth="443.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="downloadCSV" mnemonicParsing="false" prefHeight="22.0" prefWidth="139.0" text="download CSV" />
            <Button fx:id="uploadCSV" mnemonicParsing="false" prefHeight="22.0" prefWidth="120.0" text="upload CSV">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
