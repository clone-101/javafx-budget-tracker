<VBox prefHeight="492.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Upload CSV" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Download CSV" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Preferences" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About Budget Tracker" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <HBox prefHeight="191.0" prefWidth="900.0">
         <children>
            <BarChart fx:id="chart" prefHeight="212.0" prefWidth="694.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            <FlowPane alignment="TOP_CENTER" orientation="VERTICAL" prefHeight="212.0" prefWidth="266.0">
               <children>
                  <Label text="Date Range">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Start" />
                  <DatePicker />
                  <Label text="End" />
                  <DatePicker />
                  <Button mnemonicParsing="false" text="Apply">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </HBox>
      <HBox prefHeight="234.0" prefWidth="900.0">
         <children>
            <Pane prefHeight="233.0" prefWidth="37.0" />
            <FlowPane orientation="VERTICAL" prefHeight="234.0" prefWidth="228.0">
               <children>
                  <Label contentDisplay="CENTER" text="Add Transaction">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label text="Date" />
                  <DatePicker prefHeight="25.0" prefWidth="207.0" />
                  <Label text="Description" />
                  <TextField prefWidth="175.0" />
                  <Label text="Funds" />
                  <Spinner prefHeight="25.0" prefWidth="208.0" />
                  <Label text="Category" />
                  <ComboBox prefHeight="25.0" prefWidth="208.0" />
                  <FlowPane alignment="CENTER" prefHeight="34.0" prefWidth="200.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Income" />
                        <RadioButton mnemonicParsing="false" text="Expense" />
                      <Button mnemonicParsing="false" text="Save" />
                     </children>
                  </FlowPane>
               </children>
            </FlowPane>
            <FlowPane prefHeight="234.0" prefWidth="350.0" />
            <PieChart prefHeight="234.0" prefWidth="289.0" title="This Month" />
         </children>
      </HBox>
    <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="900.0" spacing="5.0" VBox.vgrow="NEVER">
      <children>
            <Button mnemonicParsing="false" text="Preferences" />
        <Pane prefHeight="35.0" prefWidth="715.0" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" prefHeight="24.0" prefWidth="88.0" text="upload CSV" />
      </children>
      <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
      </padding>
    </HBox>
  </children>
</VBox>
